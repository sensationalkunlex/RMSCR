@{
    ViewBag.Title = "Index";
}



<h2>Orders Main</h2>
<div class="bs-docs-section">
    <div class="row">
        @using (Html.BeginForm("ViewRecord", "Home", FormMethod.Get))
        {
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon">Find: </span>
                    @Html.DropDownList("SearchFactory", ViewBag.Factory as SelectList, new { @class = "form-control" })
                    @* @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class="form-control input-lg"})*@
                    <span>
                        <input type="date" name="Datefrm" id="datepicker" class="form-control" />
                    </span>
                    <span>
                        <input type="date" name="DateTo" id="datepicker" class="form-control" />
                    </span>
                    <span class="input-group-btn">

                        <input type="submit" class="btn btn-info btn-sm " value="Search" />
                    </span>
                </div>
            </div>
        }
    </div>

</div>

