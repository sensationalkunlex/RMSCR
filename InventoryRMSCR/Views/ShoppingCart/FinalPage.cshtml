@model InventoryRMSCR.Models.ViewModelTransac
@{
    ViewBag.Title = "Confirmation Page";
}

<h2></h2>

<div class="well ">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2></h2>
        <fieldset>
            <legend> Information</legend>
            @* passing record is main here*@

            <div class="form-group">
                <div class="col-lg-4"><h4 class="text-info" style="color:black">MasterID</h4> </div>
                <div class="col-lg-8 control-label">
                    <h4 class="text-info" style="color:black"> @ViewBag.MasterID</h4>
                </div>
            </div>

            <div>
                <div class="col-lg-4"><h4 class="text-info" style="color:black">Actual Valuew</h4> </div>
                <div>
                @Html.TextBoxFor(m=>m.ActualVal, new {@class= "form-control col-lg-8" })
                </div>
            </div>
            <br />

            <div class="form-group">
                <div class="col-lg-4">
                    <h4 class="text-info " style="color:black">Factory Name</h4>
                </div>
                <div class="col-lg-8">
                    @Html.DropDownListFor(m => m.FactoryName, ViewBag.Factory as SelectList, new { @class = "form-control" })
                    @*@Html.EditorFor(model => model.FactoryName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "" } })*@
                    @Html.ValidationMessageFor(model => model.FactoryName, "", new { @class = "text-danger" })
                </div>
            </div>







        </fieldset>


        <div>
            <div class="col-lg-4">
                <h4 class="text-info" style="color:black">Date</h4>
            </div>
            <div class="col-lg-8">
                @*@Html(m => m.date, new { @class = "datepicker" })*@
                <input name="date" class="form-control" id="datepicker" type="text" placeholder="MM/dd/yyyy" />
                @*@Html.EditorFor(model => model.FactoryName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "" } })*@
                @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
            </div>
        </div>

       




        @* passing record is main here*@

        <br />
        <div class="col-lg-offset-4 col-md-offset-6 btn-large">

            <input type="submit" value="Submit" class="btn btn-primary btn-large" />
        </div>


    }


    <p>
    </p>

</div>

<div class="well bs-component">
    <h2 class="wow fadeInUp">Your Cart</h2>
    @Html.Partial("_partCart")
</div>
@*@Styles.Render*@
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>

        $("#datepicker").datepicker({
            dateFormat: "mm/dd/yy"
        });
    </script>

}